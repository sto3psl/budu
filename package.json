{
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ]
  },
  "scripts": {
    "format": "prettier {src,demo}/**/*.js --write && standard '{src,demo}/**/*.js' --fix",
    "lint": "standard '{src,demo}/**/*.js'",
    "build": "microbundle --strict",
    "dev": "microbundle watch",
    "test": "ava"
  },
  "standard": {
    "env": [ "browser" ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "printWidth": 100,
    "singleQuote": true
  },
  "name": "budu",
  "version": "0.0.1",
  "description": "Library to batch DOM reads and writes, reducing layout jank and getting a better performance for animations.",
  "main": "lib/budu.js",
  "umd:main": "lib/budu.umd.js",
  "module": "lib/budu.mjs",
  "source": "src/index.js",
  "files": [
    "lib"
  ],
  "ava": {
    "require": [
      "esm"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sto3psl/budu.git"
  },
  "keywords": [
    "dom",
    "fast",
    "batch",
    "read",
    "write",
    "animation",
    "style",
    "layout"
  ],
  "author": "Fabian Guendel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sto3psl/budu/issues"
  },
  "homepage": "https://github.com/sto3psl/budu#readme",
  "devDependencies": {
    "ava": "^1.1.0",
    "esm": "^3.1.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "microbundle": "^0.9.0",
    "parcel": "^1.11.0",
    "prettier": "^1.16.1",
    "raf": "^3.4.1",
    "sinon": "^7.2.3",
    "standard": "^12.0.1"
  }
}
